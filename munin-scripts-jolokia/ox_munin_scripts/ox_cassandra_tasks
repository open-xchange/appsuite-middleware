#!/usr/bin/perl
#%# family=auto
#%# capabilities=autoconf

use strict;

use LWP;
use JSON;

if ( $ARGV[0] and $ARGV[0] eq "autoconf")
{
	print "yes\n";
	exit 0;
}

if ( $ARGV[0] and $ARGV[0] eq "config")
{
    print "graph_title Cassandra Tasks\n";
    print "graph_args --base 1000 -l 0\n";
    print "graph_category Open Xchange\n";
    print "graph_vlabel Number\n";
    print "blockingExecutorQueueTasks.label Blocking Executor Queue Tasks\n";
    print "blockingExecutorQueueTasks.draw LINE1\n";
    print "queuedTasks.label Queued Tasks\n";
    print "queuedTasks.draw LINE2\n";
    print "reconnectionSchedulerQueueSize.label Reconnection Scheduler Queue Size\n";
    print "reconnectionSchedulerQueueSize.draw LINE3\n";
    print "schedulerQueueSize.label Scheduler Queue Size\n";
    print "schedulerQueueSize.draw LINE3\n";
    exit 0
}

my $url = $ENV{oxJolokiaUrl};
my $username = $ENV{oxJolokiaUser};
my $password = $ENV{oxJolokiaPassword};

callUrl("blockingExecutorQueueTasks","/read/com.openexchange.nosql.cassandra:name=Cassandra%20Cluster%20Monitoring%20Bean/BlockingExecutorQueueTasks");
callUrl("queuedTasks","/read/com.openexchange.nosql.cassandra:name=Cassandra%20Cluster%20Monitoring%20Bean/QueuedTasks");
callUrl("reconnectionSchedulerQueueSize","/read/com.openexchange.nosql.cassandra:name=Cassandra%20Cluster%20Monitoring%20Bean/ReconnectionSchedulerQueueSize");
callUrl("schedulerQueueSize","/read/com.openexchange.nosql.cassandra:name=Cassandra%20Cluster%20Monitoring%20Bean/SchedulerQueueSize");

sub callUrl {
	my $ua = LWP::UserAgent->new();
	my $req = HTTP::Request->new(GET => "$url$_[1]");
	$req->authorization_basic($username,$password);
	
	$req->header('Accept', => 'text/html');
	
	my $response = $ua->request($req);
	
	if ($response->is_success) {
		my $json = decode_json($response->decoded_content);
		if (defined $json->{value}){
			print "$_[0].value ";
			print $json->{value},"\n";
		}
	}
	else {
		my $status = $response->status_line;
		if ($status == 404) {
			die "Link to servlet might not be set correctly, this can be done by altering /etc/munin/plugin-conf.d/ox and setting the correct path to your jolokia servlet";
		}
		elsif ($status == 401) {
			die "Credentials to login might be not set correctly. The credentials are set inside /opt/open-xchange/etc/jolokia.properties on the OX, for munin, those need to be altered at /etc/munin/plugin-conf.d/ox";
		}
		else {
			die "Something went wrong:\n",$status;
		}
	}
}