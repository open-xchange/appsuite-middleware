<?xml version="1.0" encoding="UTF-8"?>
<project name="administration RMI tests" basedir=".">

    <property name="bundlesDir" value="bundles"/>
	<property name="consoleLibDir" value="bundles"/>
    <property name="testJar" value="open-xchange-iface-tests.jar"/>
    <property name="logDir" value="log"/>

    <property name="srcDir" value="src"/>
    <property name="binDir" value="build"/>
    <property name="libDir" value="lib"/>

    <path id="rmiClasspath">
        <fileset dir="${bundlesDir}">
            <include name="**/*.jar"/>
        </fileset>
    	<fileset dir="${consoleLibDir}">
    	    <include name="**/*.jar"/>
    	</fileset>
        <fileset dir="${libDir}">
            <include name="*.jar"/>
        </fileset>
        <pathelement location="${testJar}"/>
    </path>

    <target name="clean">
        <delete dir="${binDir}"/>
        <delete dir="${logDir}"/>
    </target>

    <target name="compileTests" depends="clean">
        <mkdir dir="${binDir}"/>
        <javac srcdir="${srcDir}" destdir="${binDir}" debug="true" encoding="US-ASCII" source="1.6" target="1.6" includeAntRuntime="false" debuglevel="lines,vars,source">
            <classpath>
                <path refid="rmiClasspath"/>
            </classpath>
        </javac>
    </target>

    <target name="runTests">
        <delete dir="${logDir}"/>
        <mkdir dir="${logDir}"/>
        <junit errorProperty="test.failed" failureProperty="test.failed" showoutput="yes" printsummary="yes">
            <classpath>
                <path refid="rmiClasspath"/>
                <pathelement path="${binDir}"/>
            </classpath>
            <test name="com.openexchange.admin.rmi.AdminCoreTest" todir="${logDir}"/>
            <test name="com.openexchange.admin.rmi.ResourceTest" todir="${logDir}"/>
            <test name="com.openexchange.admin.rmi.UserTest" todir="${logDir}"/>
            <test name="com.openexchange.admin.rmi.GroupTest" todir="${logDir}"/>
            <test name="com.openexchange.admin.user.copy.rmi.RoundtripTest" todir="${logDir}"/>
            <formatter type="xml"/>
            <sysproperty key="rmi_test_host" value="${rmiHost}"/>
            <sysproperty key="rmi_test_dbhost" value="${rmiDatabase}"/>
            <sysproperty key="rmi_test_masterpw" value="${masterPassword}"/>
            <sysproperty key="rmi_test_dbpw" value="${databasePassword}"/>
            <sysproperty key="rmi_test_storepath" value="${storePath}"/>
        </junit>
    </target>

</project>
