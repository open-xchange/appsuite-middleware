#!/usr/bin/make -f
# Build open-xchange-libs and open-xchange

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

oxroot=$(CURDIR)/debian/open-xchange-sessiond
instprefix=/opt/open-xchange

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Nothing to do to configure the package
	touch configure-stamp

build: build-stamp

build-stamp: configure-stamp 
	dh_testdir
	#ant -Dlib.dir=$(instprefix)/lib compile
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	ant clean
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	ant -Dlib.dir=$(instprefix)/lib -Ddestdir=$(oxroot) -Dprefix=$(instprefix) install
	
# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
